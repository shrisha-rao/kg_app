# Vector DB Configuration
VECTOR_DB_TYPE= local #mock

# LLM Configuration (for when not using mock)
EMBEDDING_TYPE=local #mock 

# Use mock services for development
USE_MOCK_SERVICES=false


LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2
VERTEX_AI_LLM_MODEL=text-bison@001
VERTEX_AI_EMBEDDING_MODEL=textembedding-gecko@001
EMBEDDING_DIMENSION=384

# Emulator Settings
FIRESTORE_EMULATOR_HOST=firestore-emulator:8080

# For local dev, you can use "dev-project"
# For prod, set to your real GCP project ID
GCP_PROJECT_ID=dev-project

# Redis (local emulator)
REDIS_HOST=redis
REDIS_PORT=6379

# Cloud Storage (can be local minio or just leave empty for dev)
GCS_BUCKET_NAME= #dev-research-bucket

# ArangoDB
ARANGODB_HOST=http://arangodb:8529
ARANGODB_USERNAME=root
ARANGODB_PASSWORD=my-secret-password
ARANGODB_DATABASE=research
ARANGODB_TEST_DB=test



# Disable Google Cloud authentication when using emulator
GOOGLE_APPLICATION_CREDENTIALS=




# Other settings with defaults...
GCP_REGION=us-central1
GCS_BUCKET_NAME=dev-bucket
SECRET_KEY=dev-secret-key
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2
VERTEX_AI_EMBEDDING_MODEL=textembedding-gecko@001
EMBEDDING_DIMENSION=384
NER_EXTRACTION_METHOD=spacy  # or "llm"
PDF_USE_OCR=false
PDF_OCR_LANGUAGE=eng
